<h1>Books</h1>

<% @books.each do |book| %>
<p>Title</p>
<p>Body</p>
<span><%= book.title %></span>
<span><%= book.body %></span>
<span><%= link_to book.title, books_path(book.id) %></span>
<%= link_to "Destroy", books_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<%= link_to "Show", book_path(book) %>
<%= link_to "Edit",edit_book_path(book) %>
<% end %>

<%= form_with model:@book, url:'/books', local:true do |f| %>
 <h2>New book</h2>
 <h6>Titele</h6>
  <%= f.text_field :title %>
  <h6>Body</h6>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>

<% end %>