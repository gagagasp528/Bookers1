<h1>Books</h1>

<% @books.each do |book| %>
<p>Title</p>
<p>Body</p>
<span><%= book.title %></span>
<span><%= book.body %></span>

<% end %>

<%= form_with model:@book, url:'/books', local:true do |f| %>
 <h2>New book</h2>
 <h6>Titele</h6>
  <%= f.text_field :title %>
  <h6>Body</h6>
  <%= f.text_area :body %>
  <%= f.submit 'Create Bok' %>

<% end %>